<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({ title: "Home" });
    });
  </script>
<% end %>
<h2>Products</h2>

<ul>
  <% @products.each do |product| %>
    <li><%= link_to product.title, "https://#{@shop_session.url}/admin/products/#{product.id}", target: "_top" %></li>
  <% end %>
</ul>

<hr>

<a href='products/generateall'><h2>Generate All Products</h2></a>
<br>
<a href='/products/deleteall'><h2>Delete All Products</h2></a>
<br>
<h2>Create New Product</h2>
<%= form_with url: '/products/new' do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :product_type %>
  <%= f.text_field :product_type %>
  <%= f.submit "Create" %>
<% end %>

